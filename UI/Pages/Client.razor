@page "/user"
@using Core.Models;

@inject NavigationManager Navigator

<EditForm Model="user" OnSubmit="SignUp">
	<DataAnnotationsValidator />
	<ValidationSummary />
	<div class="container-fluid bg-white">
		<div class="d-grid gap-2 col-5 mx-auto bg-white">
			<h3>Sign Up to continue</h3>
			<div class="mb-3">
				<label class="form-label">First name</label>
				<InputText type="text" @bind-Value="user.FirstName" class="form-control"></InputText>
			</div>	<div class="mb-3">
				<label class="form-label">Last Name</label>
				<InputText type="text" @bind-Value="user.LastName" class="form-control"></InputText>
			</div>
			<div class="mb-3">
				<label class="form-label">Email or username</label>
				<InputText type="email" @bind-Value="user.Email" class="form-control"></InputText>
			</div>
			<div class="mb-3">
				<label class="form-label">Password</label>
				<InputText type="password" @bind-Value="user.Password" class="form-control"></InputText>
			</div>
			<div class="mb-3">
				<label class="form-label">Confirm Password</label>
				<InputText type="password" @bind-Value="confirmation" class="form-control"></InputText>
			</div>
			<div class="mb-3">
				<button type="submit" class="btn btn-primary btn-lg" @onclick="SignUp">Sign Up</button>
			</div>
		</div>
	</div>
</EditForm>

@code {
	private Core.Models.Client user = new Core.Models.Client(string.Empty, string.Empty, string.Empty, string.Empty);
	string? confirmation;

	void SignUp()
	{
		//TODO: validate and insert client into database
		Navigator.NavigateTo("/upload");
	}
}
